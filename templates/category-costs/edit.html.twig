{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row mt-5 mb-5" style="padding-top: 2%;">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            Editar Categoria de Custo
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                {% set action = route('category-costs.update', {'id': category.id})%}
                                {% set submitIcon = 'pencil-square-o' %}
                                {% set textName = 'Editar' %}
                                {% include 'category-costs/_form.html.twig' %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}