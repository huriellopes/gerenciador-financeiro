{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row mt-5 mb-5 justify-content-center" style="padding-top: 2%;">
            <div class="col-12 col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title text-center">
                            Login
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 col-md-12">
                                {% set action = route('auth.login') %}
                                {% set textName = 'Login' %}
                                {% include 'auth/_form.html.twig' %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}